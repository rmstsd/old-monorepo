{
  "include": ["components", "hooks", "index.ts"],

  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "rootDirs": ["components", "hooks", "index.ts"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "declaration": true
  }
}
