{
  "include": ["src"],

  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/types"
  }
}
